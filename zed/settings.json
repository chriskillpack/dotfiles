// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/__pycache__",
    "*.pyc",
    "**/build",
    "**/*.egg-info"
  ],
  "languages": {
    "Go": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "goimports",
          "arguments": []
        }
      },
      "wrap_guides": [80]
    },
    "Git Commit": {
      "wrap_guides": [50, 72]
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "jq",
          "arguments": ["."]
        }
      }
    },
    "Python": {
      "wrap_guides": [88, 100],
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Terraform": {
      "format_on_save": "on",
    }
  },
  "lsp": {
    "protobuf-language-server": {
      "binary": {
        "path": "buf",
        "arguments": ["beta", "lsp"]
      }
    }
  },
}
